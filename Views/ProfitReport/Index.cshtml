@model HazelInvoice.ViewModels.ProfitSummaryViewModel
@{
    ViewData["Title"] = "Profit & Sales Summary";
    ViewData["NotePurpose"] = "Summarizes sales, fees, deductions, capital, and profit distribution.";
    ViewData["NoteInstructions"] = "Adjust the date range and fee inputs, then use the buttons to add deductions, capital, or purchases.";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Source+Sans+3:wght@400;500;600;700&display=swap');

    :root {
        --ink: #111827;
        --muted: #6b7280;
        --bg: #f5f7fb;
        --card: #ffffff;
        --line: #e5e7eb;
        --accent: #2563eb;
        --accent-2: #0ea5e9;
        --success: #16a34a;
        --danger: #dc2626;
        --warn: #f59e0b;
        --excel-border: 1px solid #d7dbe2;
        --excel-header-bg: #eef2f7;
        --excel-header-text: #111827;
        --excel-footer-bg: #f8fafc;
    }
    
    .excel-font {
        font-family: 'Source Sans 3', 'Segoe UI', sans-serif;
        color: var(--ink);
    }

    .report-shell {
        background: radial-gradient(1200px 500px at 10% -10%, #e8f2ff 0%, var(--bg) 45%);
        min-height: 100vh;
    }

    .report-title {
        font-family: 'Space Grotesk', 'Segoe UI', sans-serif;
        letter-spacing: 0.5px;
        font-weight: 700;
    }

    .group-title {
        font-family: 'Space Grotesk', sans-serif;
        text-transform: uppercase;
        font-size: 0.8rem;
        font-weight: 700;
        color: var(--muted);
        letter-spacing: 1px;
        margin-bottom: 0.5rem;
    }

    /* SECTION HEADERS */
    .section-header {
        text-align: left;
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        font-weight: 700;
        text-transform: uppercase;
        padding: 10px 14px;
        letter-spacing: 0.6px;
        border: 1px solid var(--line);
        border-radius: 10px 10px 0 0;
        margin-bottom: 0;
        background: var(--card);
        color: var(--ink);
        transition: transform 0.15s ease, box-shadow 0.15s ease;
    }
    .section-header[aria-expanded="true"] .section-toggle {
        transform: rotate(180deg);
    }
    .section-toggle {
        transition: transform 0.2s ease;
    }
    .section-header:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 16px rgba(15, 23, 42, 0.08);
    }
    .section-header .section-toggle {
        color: var(--muted);
        font-size: 0.9rem;
    }
    .header-sales { border-left: 6px solid #1f4ed8; }
    .header-profit { border-left: 6px solid #16a34a; }
    .header-deduct { border-left: 6px solid #dc2626; }
    .header-capital { border-left: 6px solid #0ea5e9; }
    .header-ledger { border-left: 6px solid #475569; }
    .header-main { border-left: 6px solid #111827; }

    /* EXCEL TABLE */
    .table-excel {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.9rem;
        background: #fff;
    }
    .table-excel th, .table-excel td {
        border: var(--excel-border);
        padding: 7px 10px;
        vertical-align: middle;
    }
    .table-excel th {
        background-color: var(--excel-header-bg);
        color: var(--excel-header-text);
        font-weight: 700;
        text-align: center;
        border-bottom: 2px solid #555;
        white-space: nowrap;
        position: sticky;
        top: 0;
        z-index: 10;
        box-shadow: 0 1px 2px rgba(0,0,0,0.08);
    }
    .table-excel tbody tr:hover {
        background: #f4f7ff;
    }
    .bg-profit-light {
        background: #eef7f0;
    }
    /* Footer Row Emphasis */
    .table-excel tfoot td {
        background-color: var(--excel-footer-bg);
        font-weight: 800;
        border-top: 2px solid #000 !important;
        font-size: 1rem;
    }

    /* ALIGNMENT */
    .num-col { text-align: right; font-family: 'Consolas', monospace; letter-spacing: -0.5px; }
    .text-center { text-align: center; }
    .text-start { text-align: left; }

    /* COLORS */
    .val-pos { color: #166534; }
    .val-neg { color: #b91c1c; }
    .val-warn { color: #b45309; }

    /* SCROLL WRAPPERS */
    .excel-box {
        border: 1px solid var(--line);
        border-top: none;
        max-height: 400px;
        overflow-y: auto;
        background: #fff;
        border-radius: 0 0 10px 10px;
    }

    /* KPI CARDS */
    .kpi-card {
        border: 1px solid var(--line);
        border-left: 6px solid var(--accent);
        background: #fff;
        padding: 14px;
        border-radius: 14px;
        box-shadow: 0 6px 20px rgba(15, 23, 42, 0.06);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .kpi-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 26px rgba(15, 23, 42, 0.12);
    }
    .kpi-title { font-size: 0.75rem; text-transform: uppercase; color: #666; font-weight: 700; margin-bottom: 4px; }
    .kpi-value { font-size: 1.5rem; font-weight: 800; color: #333; font-family: 'Consolas', monospace; }

    .action-btn {
        border-radius: 999px;
        font-weight: 700;
        letter-spacing: 0.4px;
    }

    @@media print {
        .report-shell {
            background: #fff;
        }
        .kpi-card,
        .excel-box,
        .section-header {
            box-shadow: none !important;
        }
    }
</style>

<div class="container-fluid p-4 excel-font report-shell">
    <!-- Header & Controls -->
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <div>
            <h2 class="report-title mb-0 text-uppercase"><i class="bi bi-graph-up-arrow text-primary"></i> Profit & Sales Summary</h2>
            <div class="text-muted small">Financial Report: @Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")</div>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-danger btn-sm action-btn" data-bs-toggle="modal" data-bs-target="#deductionModal"><i class="bi bi-dash-circle"></i> Deduction</button>
            <button class="btn btn-outline-info btn-sm action-btn" data-bs-toggle="modal" data-bs-target="#capitalModal"><i class="bi bi-cash-stack"></i> Capital</button>
            <button class="btn btn-outline-secondary btn-sm action-btn" data-bs-toggle="modal" data-bs-target="#purchaseModal"><i class="bi bi-bag-plus"></i> Purchase</button>
            <a href="javascript:window.print()" class="btn btn-dark btn-sm action-btn"><i class="bi bi-printer"></i> Print</a>
        </div>
    </div>

    <partial name="_PageNote" />

    <!-- Filters (Hidden on Print) -->
    <form method="get" class="card p-3 mb-4 shadow-sm border-0 d-print-none">
        <div class="row g-2 align-items-end">
            <div class="col-md-2">
                <label class="small fw-bold text-muted">START DATE</label>
                <input type="date" name="startDate" class="form-control form-control-sm fw-bold" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2">
                <label class="small fw-bold text-muted">END DATE</label>
                <input type="date" name="endDate" class="form-control form-control-sm fw-bold" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-1">
                <label class="small fw-bold text-muted">FEE %</label>
                <input type="number" step="0.1" name="percentFee" class="form-control form-control-sm text-center fw-bold" value="@Model.PercentFee" />
            </div>
            <div class="col-md-1">
                <label class="small fw-bold text-muted">P1 SHARE %</label>
                <input type="number" step="1" name="split1" class="form-control form-control-sm text-center fw-bold" value="@Model.Partner1SharePercent" />
            </div>
            <div class="col-md-2">
                <div class="form-check pt-4">
                    <input class="form-check-input" type="checkbox" name="includeUnpaid" value="true" @(Model.IncludeUnpaid ? "checked" : "") id="checkUnpaid">
                    <label class="form-check-label small fw-bold" for="checkUnpaid">INCLUDE UNPAID</label>
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary btn-sm w-100 fw-bold">REFRESH DATA</button>
            </div>
        </div>
    </form>

    <!-- KPI Summary Row -->
    <div class="group-title"><i class="bi bi-stars text-primary"></i> Overview</div>
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="kpi-card" style="border-left-color: #0d6efd;">
                <div class="kpi-title">TOTAL SALES (@(Model.IncludeUnpaid ? "ALL" : "PAID"))</div>
                <div class="kpi-value text-primary">₱@Model.TotalGrossSales.ToString("N2")</div>
                <small class="text-muted d-block mt-1">@Model.TotalReceiptCount Receipts</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kpi-card" style="border-left-color: #198754;">
                 <div class="kpi-title">TOTAL PAID</div>
                 <div class="kpi-value text-success">₱@Model.TotalPaidReceipts.ToString("N2")</div>
            </div>
        </div>
        <div class="col-md-3">
             <div class="kpi-card" style="border-left-color: #dc3545;">
                 <div class="kpi-title">TOTAL UNPAID</div>
                 <div class="kpi-value text-danger">₱@Model.TotalUnpaidReceipts.ToString("N2")</div>
            </div>
        </div>
        <div class="col-md-3">
             <div class="kpi-card" style="border-left-color: #0dcaf0;">
                 <div class="kpi-title">ITEMS SOLD</div>
                 <div class="kpi-value text-info">@Model.TotalItemsSold.ToString("N0") <span class="fs-6 text-muted">units</span></div>
            </div>
        </div>
    </div>

    <!-- MAIN GRID -->
    <div class="group-title"><i class="bi bi-diagram-3 text-primary"></i> Operations</div>
    <div class="row g-4">
        <!-- LEFT: Breakdowns -->
        <div class="col-lg-8">
            <!-- Row: Sales & Profit Tables -->
            <div class="row g-0">
                <div class="col-md-6 pe-md-2">
                    <button class="section-header header-sales" type="button" data-bs-toggle="collapse" data-bs-target="#salesSection">
                        <span><i class="bi bi-receipt-cutoff me-2"></i> A. Sales & Fees (@Model.PercentFee%)</span>
                        <span class="section-toggle"><i class="bi bi-chevron-down"></i></span>
                    </button>
                    <div id="salesSection" class="collapse show excel-box">
                        <table class="table-excel">
                            <thead>
                                <tr><th>DATE</th><th>SALES</th><th>FEE</th></tr>
                            </thead>
                            <tbody>
                                @foreach(var day in Model.DailyStats) {
                                    <tr>
                                        <td class="text-center">@day.Date.ToString("MM/dd")</td>
                                        <td class="num-col">@day.SalesAmount.ToString("N2")</td>
                                        <td class="num-col val-neg">@day.FeeAmount.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td>TOTAL</td>
                                    <td class="num-col">₱@Model.TotalGrossSales.ToString("N2")</td>
                                    <td class="num-col val-neg">₱@Model.TotalFees.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="col-md-6 ps-md-2 mt-3 mt-md-0">
                    <button class="section-header header-profit" type="button" data-bs-toggle="collapse" data-bs-target="#profitSection">
                        <span><i class="bi bi-graph-up-arrow me-2"></i> B. Gross Profit</span>
                        <span class="section-toggle"><i class="bi bi-chevron-down"></i></span>
                    </button>
                     <div id="profitSection" class="collapse show excel-box">
                        <table class="table-excel">
                            <thead>
                                <tr><th>DATE</th><th class="bg-profit-light">PROFIT</th></tr>
                            </thead>
                            <tbody>
                                @foreach(var day in Model.DailyStats) {
                                    <tr>
                                        <td class="text-center">@day.Date.ToString("MM/dd")</td>
                                        <td class="num-col fw-bold val-pos bg-profit-light">@day.GrossProfit.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td>TOTAL</td>
                                    <td class="num-col val-pos">₱@Model.TotalGrossProfit.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Row: Deductions & Capital -->
            <div class="row g-0 mt-4">
                <div class="col-md-6 pe-md-2">
                    <button class="section-header header-deduct" type="button" data-bs-toggle="collapse" data-bs-target="#deductionSection">
                        <span><i class="bi bi-x-circle me-2"></i> C. Deductions</span>
                        <span class="section-toggle"><i class="bi bi-chevron-down"></i></span>
                    </button>
                     <div id="deductionSection" class="collapse show excel-box">
                        <table class="table-excel">
                            <thead>
                                <tr><th>DESCRIPTION</th><th>AMOUNT</th></tr>
                            </thead>
                            <tbody>
                                @foreach(var d in Model.Deductions) {
                                    <tr>
                                        <td>@d.Description <br><small class="text-muted">@d.Date.ToString("MM/dd")</small></td>
                                        <td class="num-col val-neg">@d.Amount.ToString("N2")</td>
                                    </tr>
                                }
                                @if(!Model.Deductions.Any()) { <tr><td colspan="2" class="text-center text-muted fst-italic py-3">No deductions recorded</td></tr>}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td>TOTAL DEDUCTIONS</td>
                                    <td class="num-col val-neg">₱@Model.TotalDeductions.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="col-md-6 ps-md-2 mt-3 mt-md-0">
                    <button class="section-header header-capital" type="button" data-bs-toggle="collapse" data-bs-target="#capitalSection">
                        <span><i class="bi bi-safe2 me-2"></i> D. Capital Funds</span>
                        <span class="section-toggle"><i class="bi bi-chevron-down"></i></span>
                    </button>
                     <div id="capitalSection" class="collapse show excel-box">
                        <table class="table-excel">
                            <thead>
                                <tr><th>FUND NAME</th><th>AMOUNT</th></tr>
                            </thead>
                             <tbody>
                                @foreach(var c in Model.CapitalFunds) {
                                    <tr>
                                        <td>@c.Description <br><small class="text-muted">@c.Date.ToString("MM/dd")</small></td>
                                        <td class="num-col text-info">@c.Amount.ToString("N2")</td>
                                    </tr>
                                }
                                @if(!Model.CapitalFunds.Any()) { <tr><td colspan="2" class="text-center text-muted fst-italic py-3">No capital allocations</td></tr>}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td>TOTAL FUND</td>
                                    <td class="num-col text-info">₱@Model.TotalCapitalFund.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- NET PROFIT CALCULATION BOX -->
            <div class="mt-4 p-3 bg-white border border-dark border-2 shadow-sm rounded-3">
                 <h5 class="fw-bold border-bottom pb-2 mb-3 text-center bg-light"><i class="bi bi-calculator"></i> Net Profit Calculation</h5>
                 <div class="row text-center align-items-center g-2">
                     <div class="col">
                         <div class="text-muted small fw-bold text-uppercase">Gross Profit</div>
                         <div class="fs-4 fw-bold val-pos">₱@Model.TotalGrossProfit.ToString("N0")</div>
                     </div>
                     <div class="col-auto fs-4 text-muted">-</div>
                     <div class="col">
                         <div class="text-muted small fw-bold text-uppercase">Deductions</div>
                         <div class="fs-4 fw-bold val-neg">₱@Model.TotalDeductions.ToString("N0")</div>
                     </div>
                     <div class="col-auto fs-4 text-muted">-</div>
                     <div class="col">
                         <div class="text-muted small fw-bold text-uppercase">Capital Fund</div>
                         <div class="fs-4 fw-bold text-info">₱@Model.TotalCapitalFund.ToString("N0")</div>
                     </div>
                     <div class="col-auto fs-4 text-dark">=</div>
                     <div class="col-md-4">
                         <div class="bg-dark text-white p-2 rounded-1 border border-secondary">
                             <div class="small text-uppercase text-warning fw-bold">NET DISTRIBUTABLE PROFIT</div>
                             <div class="fs-2 fw-black">₱@Model.NetProfit.ToString("N2")</div>
                         </div>
                     </div>
                 </div>
            </div>
            
            <!-- PARTNERS SPLIT -->
            <div class="group-title mt-4"><i class="bi bi-people text-primary"></i> Partner Distribution</div>
            <div class="row g-3 mt-2">
                <!-- Partner 1 -->
                <div class="col-md-6">
                    <div class="card h-100 border-dark shadow-sm">
                        <div class="card-header bg-dark text-white fw-bold d-flex justify-content-between">
                            <span>@Model.Partner1Name</span>
                            <span class="badge bg-warning text-dark border border-white">@Model.Partner1SharePercent.ToString("0")% SHARE</span>
                        </div>
                        <div class="card-body p-0">
                            <table class="table-excel mb-0">
                                <tr>
                                    <td class="fw-bold bg-light">Profit Share</td>
                                    <td class="num-col fw-bold val-pos fs-5">₱@Model.Partner1ShareAmount.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-muted small fw-bold bg-light border-top text-uppercase ps-3">Less Purchases:</td>
                                </tr>
                                @foreach(var p in Model.PartnerPurchases.Where(x => x.PartnerName == Model.Partner1Name)) {
                                <tr>
                                    <td class="ps-4">@p.Notes <small class="text-muted">(@p.Date.ToString("MM/dd"))</small></td>
                                    <td class="num-col val-neg">(@p.Amount.ToString("N2"))</td>
                                </tr>
                                }
                                <tr>
                                    <td class="fw-black bg-warning text-dark border-top-2">FINAL PAYOUT</td>
                                    <td class="num-col fw-black bg-warning text-dark border-top-2 fs-4">₱@Model.Partner1Final.ToString("N2")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Partner 2 -->
                <div class="col-md-6">
                     <div class="card h-100 border-dark shadow-sm">
                        <div class="card-header bg-dark text-white fw-bold d-flex justify-content-between">
                            <span>@Model.Partner2Name</span>
                             <span class="badge bg-warning text-dark border border-white">@Model.Partner2SharePercent.ToString("0")% SHARE</span>
                        </div>
                        <div class="card-body p-0">
                             <table class="table-excel mb-0">
                                <tr>
                                    <td class="fw-bold bg-light">Profit Share</td>
                                    <td class="num-col fw-bold val-pos fs-5">₱@Model.Partner2ShareAmount.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-muted small fw-bold bg-light border-top text-uppercase ps-3">Less Purchases:</td>
                                </tr>
                                @foreach(var p in Model.PartnerPurchases.Where(x => x.PartnerName == Model.Partner2Name)) {
                                <tr>
                                    <td class="ps-4">@p.Notes <small class="text-muted">(@p.Date.ToString("MM/dd"))</small></td>
                                    <td class="num-col val-neg">(@p.Amount.ToString("N2"))</td>
                                </tr>
                                }
                                <tr>
                                    <td class="fw-black bg-warning text-dark border-top-2">FINAL PAYOUT</td>
                                    <td class="num-col fw-black bg-warning text-dark border-top-2 fs-4">₱@Model.Partner2Final.ToString("N2")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- RIGHT: LEDGER -->
        <div class="col-lg-4">
            <button class="section-header header-ledger" type="button" data-bs-toggle="collapse" data-bs-target="#ledgerSection">
                <span><i class="bi bi-journal-text me-2"></i> F. Account Ledger</span>
                <span class="section-toggle"><i class="bi bi-chevron-down"></i></span>
            </button>
            <div id="ledgerSection" class="collapse show excel-box" style="max-height: 800px;">
                <table class="table-excel table-striped">
                    <thead>
                         <tr><th colspan="3" class="bg-light text-start border-bottom-2">OPENING BALANCE: <span class="float-end fw-bold">₱@Model.Partner1OpeningBalance.ToString("N2")</span></th></tr>
                        <tr>
                            <th class="text-start">DATE / DESC</th>
                            <th>AMT</th>
                            <th>BAL</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var row in Model.Ledger) {
                        <tr>
                            <td>
                                <div class="fw-bold" style="font-size:0.8rem">@row.Date.ToString("MM/dd")</div>
                                <div class="text-muted small" style="line-height:1.1">@row.Description</div>
                            </td>
                            <td class="num-col @(row.Amount < 0 ? "val-neg" : "val-pos")">@row.Amount.ToString("N2")</td>
                            <td class="num-col fw-bold">@row.Balance.ToString("N2")</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- DETAILED ANALYTICS FOOTER -->
    <div class="mt-5 pt-3 border-top border-3">
        <button class="section-header header-main w-100" type="button" data-bs-toggle="collapse" data-bs-target="#analyticsSection">
            <span><i class="bi bi-bar-chart-fill me-2"></i> Detailed Analytics</span>
            <span class="section-toggle text-white"><i class="bi bi-chevron-down"></i></span>
        </button>
        <div id="analyticsSection" class="collapse show">
        <div class="row g-4 mt-2">
            <div class="col-lg-6">
                <div class="section-header header-main"><span><i class="bi bi-award me-2"></i> Top Selling Items</span><span class="section-toggle"><i class="bi bi-chevron-down"></i></span></div>
                <div class="excel-box">
                    <table class="table-excel">
                        <thead><tr><th>ITEM NAME</th><th>QTY</th><th>TOTAL</th></tr></thead>
                        <tbody>
                             @foreach(var item in Model.TopItems) {
                                <tr>
                                    <td>@item.ItemName</td>
                                    <td class="num-col fw-bold">@item.Quantity.ToString("N0")</td>
                                    <td class="num-col">₱@item.TotalAmount.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="section-header header-main"><span><i class="bi bi-shop me-2"></i> Outlet Performance</span><span class="section-toggle"><i class="bi bi-chevron-down"></i></span></div>
                <div class="excel-box">
