@model IEnumerable<HazelInvoice.Models.Receipt>

@{
    ViewData["Title"] = "Receipts";
    
    string GetRowColor(HazelInvoice.Models.PaymentStatus status)
    {
        return status switch
        {
            HazelInvoice.Models.PaymentStatus.Unpaid => "table-danger", // Redish
            HazelInvoice.Models.PaymentStatus.Partial => "table-warning", // Yellowish
            HazelInvoice.Models.PaymentStatus.Paid => "table-warning", // Bootstrap 'warning' is yellow/orange. User wants Orange. style="background-color: orange" maybe?
            HazelInvoice.Models.PaymentStatus.Void => "table-secondary", // Gray
            _ => ""
        };
    }

    string GetCustomStyle(HazelInvoice.Models.PaymentStatus status)
    {
        if (status == HazelInvoice.Models.PaymentStatus.Paid) return "background-color: #fdcb6e !important;"; // Orange-ish
        return "";
    }
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@(ViewData["TitleHeader"] ?? "Receipts & Deliveries")</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg"><i class="bi bi-plus-lg"></i> New Receipt</a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Receipt #</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Type</th>
                            <th>Total</th>
                            <th>Paid</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var rowClass = GetRowColor(item.Status);
                            var rowStyle = GetCustomStyle(item.Status);
                            
                            <tr class="@rowClass" style="@rowStyle">
                                <td class="fw-bold">@item.ReceiptNumber</td>
                                <td>@item.Date.ToString("MMM dd, yyyy")</td>
                                <td>@item.CustomerName</td>
                                <td>
                                    <span class="badge bg-info text-dark">@item.Type</span>
                                </td>
                                <td class="fw-bold">@item.TotalAmount.ToString("N2")</td>
                                <td>@item.PaidAmount.ToString("N2")</td>
                                <td>
                                    <span class="badge bg-dark">@item.Status</span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Print" asp-route-id="@item.Id" class="btn btn-sm btn-light" title="Print"><i class="bi bi-printer"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light" title="View"><i class="bi bi-eye"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
