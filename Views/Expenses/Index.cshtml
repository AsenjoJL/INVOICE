@model IEnumerable<HazelInvoice.Models.Expense>

@{
    ViewData["Title"] = "Expenses";
    ViewData["NotePurpose"] = "Track operating expenses by category and vendor.";
    ViewData["NoteInstructions"] = "Record new expenses to keep daily and monthly totals accurate.";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Expenses</h1>
        <a asp-action="Create" class="btn btn-danger"><i class="bi bi-minus-circle"></i> Record Expense</a>
    </div>

    <partial name="_PageNote" />

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Vendor</th>
                            <th>Reference</th>
                            <th>Method</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Date.ToString("MMM dd, yyyy")</td>
                                <td class="fw-bold">@item.Category</td>
                                <td>@item.Vendor</td>
                                <td>@item.ReferenceNo</td>
                                <td>@item.PaymentMethod</td>
                                <td class="text-danger fw-bold">@item.Amount.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
