@model HazelInvoice.Models.Customer

@{
    ViewData["Title"] = "Edit Outlet";
    var groupOptions = ViewBag.OutletGroups as string[] ?? Array.Empty<string>();
}

<div class="container p-4">
    <div class="card shadow border-0" style="max-width: 700px; margin: 0 auto;">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Edit Outlet</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row g-2 mb-3">
                    <div class="col-md-8">
                        <div class="form-floating">
                            <input asp-for="Name" class="form-control" placeholder="Outlet Name" />
                            <label asp-for="Name">Outlet Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input asp-for="SubLabel" class="form-control" placeholder="Sub Label" />
                            <label asp-for="SubLabel">Sub Label (Optional)</label>
                            <span asp-validation-for="SubLabel" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="GroupName" class="form-control" list="groupOptions" placeholder="Group Name" />
                    <label asp-for="GroupName">Group Name</label>
                    <datalist id="groupOptions">
                        @foreach (var g in groupOptions)
                        {
                            <option value="@g"></option>
                        }
                    </datalist>
                    <span asp-validation-for="GroupName" class="text-danger"></span>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="ContactPerson" class="form-control" placeholder="Contact Person" />
                            <label asp-for="ContactPerson">Contact Person (Optional)</label>
                            <span asp-validation-for="ContactPerson" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="ContactNumber" class="form-control" placeholder="Contact Number" />
                            <label asp-for="ContactNumber">Contact Number (Optional)</label>
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Address" class="form-control" placeholder="Address" />
                    <label asp-for="Address">Address (Optional)</label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive">Is Active?</label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
