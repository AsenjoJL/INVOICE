@model HazelInvoice.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container p-4">
    <div class="card shadow border-0" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Edit Product</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="SKU" class="form-control" placeholder="SKU" />
                    <label asp-for="SKU">SKU / Code</label>
                    <span asp-validation-for="SKU" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Product Name" />
                    <label asp-for="Name">Product Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            @{
                                var categoryOptions = (ViewBag.CategoryOptions as List<string>) ?? new List<string>();
                                var defaultCategories = new[] { "Vegetables", "Fruits", "Meat", "Seafood", "Dry Goods", "Beverages", "Others" };
                                var currentCategory = Model?.Category ?? string.Empty;
                                var allCategories = categoryOptions
                                    .Concat(defaultCategories)
                                    .Where(c => !string.IsNullOrWhiteSpace(c))
                                    .Distinct(StringComparer.OrdinalIgnoreCase)
                                    .ToList();
                                if (!string.IsNullOrWhiteSpace(currentCategory) &&
                                    !allCategories.Contains(currentCategory, StringComparer.OrdinalIgnoreCase))
                                {
                                    allCategories.Add(currentCategory);
                                }
                                allCategories.Sort(StringComparer.OrdinalIgnoreCase);
                            }
                            <select asp-for="Category" class="form-select">
                                <option value="">-- Select Category --</option>
                                @foreach (var c in allCategories)
                                {
                                    <option value="@c">@c</option>
                                }
                            </select>
                            <label asp-for="Category">Category</label>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            @{
                                var unitOptions = new[] { "pc", "pcs", "kg", "pack", "bundle", "box", "sack", "tray" };
                            }
                            <select asp-for="Unit" class="form-select">
                                @foreach (var u in unitOptions)
                                {
                                    <option value="@u">@u</option>
                                }
                            </select>
                            <label asp-for="Unit">Unit</label>
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="UnitCost" class="form-control" placeholder="Cost" />
                            <label asp-for="UnitCost">Unit Cost</label>
                            <span asp-validation-for="UnitCost" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive">
                        Is Active?
                    </label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
