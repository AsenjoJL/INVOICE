@model HazelInvoice.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container p-4">
    <div class="card shadow border-0" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Add New Product</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="SKU" class="form-control bg-light" placeholder="SKU" value="V-XXX" readonly />
                    <label asp-for="SKU">SKU (Auto-Generated)</label>
                    <span asp-validation-for="SKU" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Product Name" />
                    <label asp-for="Name">Product Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Category" class="form-control" placeholder="Category" />
                            <label asp-for="Category">Category</label>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                         <div class="form-floating">
                            <input asp-for="Unit" class="form-control" placeholder="Unit" />
                            <label asp-for="Unit">Unit (e.g. pc, kg)</label>
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="UnitCost" class="form-control" placeholder="Cost" />
                            <label asp-for="UnitCost">Unit Cost</label>
                            <span asp-validation-for="UnitCost" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                         <div class="form-floating">
                            <input asp-for="ReorderLevel" class="form-control" placeholder="Reorder Level" />
                            <label asp-for="ReorderLevel">Reorder Level</label>
                            <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive">
                        Is Active?
                    </label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Create Product</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
