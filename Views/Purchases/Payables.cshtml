@model HazelInvoice.ViewModels.PayablesViewModel

@{
    ViewData["Title"] = "Payables";
    ViewData["NotePurpose"] = "Shows suppliers with unpaid or partial balances.";
    ViewData["NoteInstructions"] = "Use this list to follow up and record payments in Purchases.";
}

<div class="container-fluid p-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
        <div>
            <h1 class="mb-0">Payables</h1>
            <div class="text-muted small">Suppliers with unpaid or partial purchases.</div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Purchases</a>
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> New Purchase</a>
        </div>
    </div>

    <partial name="_PageNote" />

    <form method="get" class="d-flex flex-wrap gap-2 align-items-end mb-3">
        <div>
            <label class="form-label">Date (optional)</label>
            <input type="date" name="date" value="@(Model.Date?.ToString("yyyy-MM-dd"))" class="form-control" />
        </div>
        <button type="submit" class="btn btn-outline-secondary">Filter</button>
    </form>

    <div class="card shadow-sm mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div class="text-muted small">Total Balance</div>
            <div class="fs-4 fw-bold text-danger">â‚±@Model.TotalBalance.ToString("N2")</div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Supplier</th>
                            <th class="text-end">Total</th>
                            <th class="text-end">Paid</th>
                            <th class="text-end">Balance</th>
                            <th class="text-end">Purchases</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Suppliers.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">No payables found.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var s in Model.Suppliers)
                            {
                                <tr>
                                    <td class="fw-bold">@s.SupplierName</td>
                                    <td class="text-end">@s.TotalAmount.ToString("N2")</td>
                                    <td class="text-end">@s.PaidAmount.ToString("N2")</td>
                                    <td class="text-end text-danger">@s.Balance.ToString("N2")</td>
                                    <td class="text-end">@s.Purchases.Count</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
