@model HazelInvoice.ViewModels.PurchaseListViewModel
@using HazelInvoice.Models

@{
    ViewData["Title"] = "Purchases";
    ViewData["NotePurpose"] = "Track supplier purchases and payment status.";
    ViewData["NoteInstructions"] = "Filter by date/status, then open a purchase to review or mark as paid.";
    var statuses = new[] { "All", "Unpaid", "Partial", "Paid" };
}

<div class="container-fluid p-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
        <div>
            <h1 class="mb-0">Purchases</h1>
            <div class="text-muted small">Track supplier purchases and unpaid balances.</div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Payables" class="btn btn-outline-dark"><i class="bi bi-wallet2"></i> Payables</a>
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> New Purchase</a>
        </div>
    </div>

    <partial name="_PageNote" />

    <form method="get" class="d-flex flex-wrap gap-2 align-items-end mb-3">
        <div>
            <label class="form-label">Date</label>
            <input type="date" name="date" value="@Model.Date.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
        <div>
            <label class="form-label">Status</label>
            <select name="status" class="form-select">
                @foreach (var s in statuses)
                {
                    <option value="@s" selected="@(s == Model.StatusFilter)">@s</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-outline-secondary">Filter</button>
    </form>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Total Purchases</div>
                    <div class="fs-4 fw-bold">₱@Model.GrandTotal.ToString("N2")</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Total Paid</div>
                    <div class="fs-4 fw-bold text-success">₱@Model.TotalPaid.ToString("N2")</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Balance</div>
                    <div class="fs-4 fw-bold text-danger">₱@Model.TotalBalance.ToString("N2")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>PO #</th>
                            <th>Date</th>
                            <th>Supplier</th>
                            <th class="text-end">Total</th>
                            <th class="text-end">Paid</th>
                            <th class="text-end">Balance</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Purchases.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">No purchases found.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var p in Model.Purchases)
                            {
                                var balance = p.TotalAmount - p.PaidAmount;
                                var statusClass = p.Status switch
                                {
                                    PaymentStatus.Paid => "badge bg-success",
                                    PaymentStatus.Partial => "badge bg-warning text-dark",
                                    _ => "badge bg-danger"
                                };
                                <tr>
                                    <td>@p.PurchaseNumber</td>
                                    <td>@p.Date.ToString("yyyy-MM-dd")</td>
                                    <td>@p.SupplierName</td>
                                    <td class="text-end">@p.TotalAmount.ToString("N2")</td>
                                    <td class="text-end">@p.PaidAmount.ToString("N2")</td>
                                    <td class="text-end text-danger">@balance.ToString("N2")</td>
                                    <td><span class="@statusClass">@p.Status</span></td>
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (p.Status != PaymentStatus.Paid)
                                        {
                                            <form asp-action="MarkAsPaid" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-success" onclick="return confirm('Mark this purchase as paid?');">
                                                    <i class="bi bi-check2-circle"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
