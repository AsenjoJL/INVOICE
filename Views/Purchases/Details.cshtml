@model HazelInvoice.Models.Purchase
@using HazelInvoice.Models

@{
    ViewData["Title"] = "Purchase Details";
    var balance = Model.TotalAmount - Model.PaidAmount;
}

<div class="container-fluid p-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
        <div>
            <h1 class="mb-0">Purchase Details</h1>
            <div class="text-muted small">@Model.PurchaseNumber • @Model.Date.ToString("yyyy-MM-dd")</div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back</a>
            @if (Model.Status != PaymentStatus.Paid)
            {
                <form asp-action="MarkAsPaid" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-success" onclick="return confirm('Mark this purchase as paid?');">
                        <i class="bi bi-check2-circle"></i> Mark Paid
                    </button>
                </form>
            }
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Supplier</div>
                    <div class="fw-bold">@Model.SupplierName</div>
                    @if (!string.IsNullOrWhiteSpace(Model.SupplierAddress))
                    {
                        <div class="small text-muted">@Model.SupplierAddress</div>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.ContactNumber))
                    {
                        <div class="small text-muted">@Model.ContactNumber</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body d-flex flex-wrap justify-content-between gap-3">
                    <div>
                        <div class="text-muted small">Total</div>
                        <div class="fs-4 fw-bold">₱@Model.TotalAmount.ToString("N2")</div>
                    </div>
                    <div>
                        <div class="text-muted small">Paid</div>
                        <div class="fs-4 fw-bold text-success">₱@Model.PaidAmount.ToString("N2")</div>
                    </div>
                    <div>
                        <div class="text-muted small">Balance</div>
                        <div class="fs-4 fw-bold text-danger">₱@balance.ToString("N2")</div>
                    </div>
                    <div>
                        <div class="text-muted small">Status</div>
                        <div class="fw-bold">@Model.Status</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white fw-bold">Items</div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Item</th>
                            <th class="text-center">Qty</th>
                            <th class="text-center">Unit</th>
                            <th class="text-end">Cost</th>
                            <th class="text-end">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var line in Model.Lines)
                        {
                            <tr>
                                <td>@line.ItemName</td>
                                <td class="text-center">@line.Quantity</td>
                                <td class="text-center">@line.Unit</td>
                                <td class="text-end">@line.Cost.ToString("N2")</td>
                                <td class="text-end">@line.Amount.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white fw-bold">Payments</div>
        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            <form asp-action="AddPayment" method="post" class="row g-2 align-items-end mb-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="col-md-4">
                    <label class="form-label">Amount</label>
                    <input type="number" step="0.01" name="amount" class="form-control" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Payment Method</label>
                    <select name="paymentMethod" class="form-select">
                        @foreach (var method in Enum.GetValues<PaymentMethod>())
                        {
                            <option value="@method">@method</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Reference No. (Optional)</label>
                    <input type="text" name="referenceNo" class="form-control" />
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-outline-primary mt-2">
                        <i class="bi bi-cash-coin"></i> Record Payment
                    </button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-sm align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Method</th>
                            <th>Reference</th>
                            <th class="text-end">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Payments == null || Model.Payments.Count == 0)
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">No payments recorded.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var pay in Model.Payments.OrderByDescending(p => p.Date))
                            {
                                <tr>
                                    <td>@pay.Date.ToString("yyyy-MM-dd")</td>
                                    <td>@pay.PaymentMethod</td>
                                    <td>@pay.ReferenceNo</td>
                                    <td class="text-end">@pay.Amount.ToString("N2")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
