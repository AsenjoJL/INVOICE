<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HazelInvoice</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HazelInvoice.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
        string NavClass(string controller, string? action = null)
        {
            if (!string.IsNullOrEmpty(action))
                return currentController == controller && currentAction == action ? "sidebar-link active" : "sidebar-link";
            return currentController == controller ? "sidebar-link active" : "sidebar-link";
        }
    }

    <div class="app-shell">
        <aside class="sidebar offcanvas-lg offcanvas-start" tabindex="-1" id="sidebarNav" aria-labelledby="sidebarLabel">
            <div class="offcanvas-header d-lg-none">
                <h5 class="offcanvas-title" id="sidebarLabel">HazelInvoice</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>

            <div class="sidebar-header">
                <a class="sidebar-brand" asp-area="" asp-controller="Dashboard" asp-action="Index">HazelInvoice</a>
                <div class="sidebar-subtitle">Invoice & Ordering</div>
            </div>

            <nav class="sidebar-nav">
                <a class="@NavClass("Dashboard", "Index")" asp-area="" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2"></i> Dashboard</a>
                <a class="@NavClass("Receipts", "Index")" asp-area="" asp-controller="Receipts" asp-action="Index"><i class="bi bi-receipt"></i> Receipts</a>
                <a class="@NavClass("Receipts", "Create")" asp-area="" asp-controller="Receipts" asp-action="Create"><i class="bi bi-plus-circle"></i> New Sale</a>
                <a class="@NavClass("Products", "Index")" asp-area="" asp-controller="Products" asp-action="Index"><i class="bi bi-box-seam"></i> Products</a>
                <a class="@NavClass("Customers", "Index")" asp-area="" asp-controller="Customers" asp-action="Index"><i class="bi bi-shop"></i> Outlets</a>
                <a class="@NavClass("Suppliers", "Index")" asp-area="" asp-controller="Suppliers" asp-action="Index"><i class="bi bi-truck"></i> Suppliers</a>
                <a class="@NavClass("Orders", "VegetableMatrix")" asp-area="" asp-controller="Orders" asp-action="VegetableMatrix"><i class="bi bi-grid-3x3-gap"></i> Vegetable Order</a>
                <a class="@NavClass("ProfitReport", "Index")" asp-area="" asp-controller="ProfitReport" asp-action="Index"><i class="bi bi-bar-chart-fill"></i> Profit & Sales</a>
                <a class="@NavClass("WeeklyPrices", "PriceVersus")" asp-area="" asp-controller="WeeklyPrices" asp-action="PriceVersus"><i class="bi bi-sliders"></i> Price Setup</a>
                <a class="@NavClass("WeeklyPrices", "Index")" asp-area="" asp-controller="WeeklyPrices" asp-action="Index"><i class="bi bi-clock-history"></i> Price History</a>
                <a class="@NavClass("Expenses", "Index")" asp-area="" asp-controller="Expenses" asp-action="Index"><i class="bi bi-cash-coin"></i> Expenses</a>
                <a class="@NavClass("Purchases", "Index")" asp-area="" asp-controller="Purchases" asp-action="Index"><i class="bi bi-cart-check"></i> Purchases</a>
                <a class="@NavClass("Purchases", "Create")" asp-area="" asp-controller="Purchases" asp-action="Create"><i class="bi bi-cart-plus"></i> New Purchase</a>
                <a class="@NavClass("Purchases", "Payables")" asp-area="" asp-controller="Purchases" asp-action="Payables"><i class="bi bi-wallet2"></i> Payables</a>

                <div class="sidebar-section-title">Reports</div>
                <a class="@NavClass("Reports", "IncomeStatement")" asp-controller="Reports" asp-action="IncomeStatement"><i class="bi bi-file-earmark-text"></i> Income Statement</a>
                <a class="@NavClass("Reports", "Inventory")" asp-controller="Reports" asp-action="Inventory"><i class="bi bi-clipboard-data"></i> Inventory Status</a>
                <a class="@NavClass("ProfitReport", "Index")" asp-controller="ProfitReport" asp-action="Index"><i class="bi bi-file-earmark-spreadsheet-fill"></i> Profit Summary</a>
            </nav>

            <div class="sidebar-footer">
                <partial name="_LoginPartial" />
            </div>
        </aside>

        <div class="content">
            <div class="mobile-topbar d-lg-none">
                <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarNav" aria-controls="sidebarNav">
                    <i class="bi bi-list"></i>
                </button>
                <span class="mobile-title">HazelInvoice</span>
            </div>
            <main role="main" class="content-area">
                @RenderBody()
            </main>
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2026 - HazelInvoice - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
