@model HazelInvoice.ViewModels.PriceVersusViewModel

@{
    ViewData["Title"] = "Price Versus Setup";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">Price Versus Setup</h2>
            <p class="text-muted">
                Original Price vs Selling Price for Week: 
                <span class="fw-bold text-dark">@Model.WeekStart.ToString("MMM dd") - @Model.WeekEnd.ToString("MMM dd, yyyy")</span>
            </p>
        </div>
        <div>
            <a asp-controller="Orders" asp-action="VegetableMatrix" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Matrix
            </a>
            <button type="submit" form="versusForm" class="btn btn-success fw-bold ms-2 px-4 shadow-sm">
                <i class="bi bi-save me-1"></i> Save Changes
            </button>
        </div>
    </div>

    <form method="get" class="mb-4 bg-white p-3 rounded shadow-sm d-inline-block">
        <label class="fw-bold me-2">View Prices For Date:</label>
        <input type="date" name="date" class="form-control d-inline-block w-auto" value="@Model.TargetDate.ToString("yyyy-MM-dd")" onchange="this.form.submit()" />
    </form>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-0">
            <form method="post" id="versusForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TargetDate" />

                <div asp-validation-summary="All" class="text-danger px-4 pt-3"></div>
                <div class="px-4 pt-2 pb-3 border-bottom">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="ApplyToMasterCost" />
                        <label class="form-check-label" asp-for="ApplyToMasterCost">
                            Apply cost changes to master product cost
                        </label>
                    </div>
                    <div class="text-muted small">If unchecked, cost changes apply only to the selected week.</div>
                </div>
                
                <div class="table-responsive" style="max-height: 70vh;">
                    <table class="table table-hover align-middle mb-0" id="priceTable">
                        <thead class="bg-primary text-white sticky-top" style="top: 0; z-index: 10;">
                            <tr>
                                <th class="ps-4 py-3">Product Name</th>
                                <th class="py-3">Unit</th>
                                <th class="text-end py-3" style="width: 140px;">Original Price</th>
                                <th class="text-end py-3" style="width: 140px;">Markup (Added)</th>
                                <th class="text-end py-3" style="width: 140px;">Base Price</th>
                                <th class="text-end py-3" style="width: 140px;">Delivery Fee <span class="text-muted small">(Optional)</span></th>
                                <th class="text-end py-3" style="width: 140px;">Delivery Price</th>
                                <th class="text-center py-3" style="width: 90px;">Reset</th>
                                <th class="text-center py-3" style="width: 100px;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Items.Count; i++)
                            {
                                var item = Model.Items[i];
                                <tr class="item-row" data-master-cost="@item.MasterCost.ToString("0.00")" data-master-markup="@item.MasterMarkup.ToString("0.00")" data-master-delivery-fee="@item.MasterDeliveryFee.ToString("0.00")">
                                    <td class="ps-4 fw-bold">
                                        @item.ProductName
                                        <input type="hidden" name="Items[@i].ProductId" value="@item.ProductId" />
                                        <input type="hidden" name="Items[@i].ProductName" value="@item.ProductName" />
                                    </td>
                                    <td class="text-muted">@item.Unit</td>
                                    
                                    <td class="text-end">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text bg-light border-0">â‚±</span>
                                            <input type="number" step="0.01" min="0"
                                                   name="Items[@i].Cost"
                                                   class="form-control text-end cost-input fw-bold"
                                                   value="@item.Cost.ToString("0.00")" />
                                        </div>
                                    </td>
                                    
                                    <td class="text-end">
                                        <input type="number" step="0.01" min="0"
                                               name="Items[@i].Markup"
                                               class="form-control text-end markup-input fw-bold"
                                               value="@item.Markup.ToString("0.00")" />
                                    </td>

                                    <td class="text-end">
                                        <input type="text" 
                                               class="form-control text-end base-price-input border-0 bg-transparent fw-bold text-primary" 
                                               value="@((item.Cost + item.Markup).ToString("0.00"))" 
                                               readonly />
                                    </td>
                                    
                                    <td class="text-end">
                                        <input type="number" step="0.01" min="0"
                                               name="Items[@i].DeliveryFee"
                                               class="form-control text-end delivery-fee-input fw-bold"
                                               value="@(item.DeliveryFee.HasValue ? item.DeliveryFee.Value.ToString("0.00") : "")" />
                                    </td>

                                    <td class="text-end">
                                        <input type="text" 
                                               class="form-control text-end delivery-price-input border-0 bg-transparent fw-bold text-primary" 
                                               value="@((item.Cost + item.Markup + (item.DeliveryFee ?? item.MasterDeliveryFee)).ToString("0.00"))" 
                                               readonly />
                                    </td>

                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-outline-secondary reset-cost-btn">Reset</button>
                                    </td>
                                    
                                    <td class="text-center">
                                        @if (item.HasWeeklyRecord)
                                        {
                                            <span class="badge bg-warning text-dark">Weekly</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted border">Default</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const table = document.getElementById('priceTable');

        const parseNumber = (value) => {
            if (!value) return 0;
            return parseFloat(value.toString().replace(',', '.')) || 0;
        };

        const updateRow = (row) => {
            const costInput = row.querySelector('.cost-input');
            const markupInput = row.querySelector('.markup-input');
            const deliveryFeeInput = row.querySelector('.delivery-fee-input');

            const cost = parseNumber(costInput?.value);
            const markup = parseNumber(markupInput?.value);
            let deliveryFee = parseNumber(deliveryFeeInput?.value);
            if (deliveryFeeInput && deliveryFeeInput.value === '') {
                deliveryFee = parseNumber(row.dataset.masterDeliveryFee);
            }
            const basePrice = cost + markup;
            const deliveryPrice = basePrice + deliveryFee;

            const basePriceInput = row.querySelector('.base-price-input');
            if (basePriceInput) basePriceInput.value = basePrice.toFixed(2);

            const deliveryPriceInput = row.querySelector('.delivery-price-input');
            if (deliveryPriceInput) deliveryPriceInput.value = deliveryPrice.toFixed(2);

            row.classList.add('table-warning');
        };

        table.addEventListener('input', function(e) {
            if (e.target.classList.contains('markup-input') || 
                e.target.classList.contains('cost-input') ||
                e.target.classList.contains('delivery-fee-input')) {
                const row = e.target.closest('tr');
                updateRow(row);
            }
        });

        table.addEventListener('click', function(e) {
            const btn = e.target.closest('.reset-cost-btn');
            if (!btn) return;

            const row = btn.closest('tr');
            const masterCost = parseNumber(row.dataset.masterCost);
            const costInput = row.querySelector('.cost-input');
            if (costInput) costInput.value = masterCost.toFixed(2);

            updateRow(row);
        });
    });
</script>
