@model IEnumerable<HazelInvoice.Models.WeeklyPrice>

@{
    ViewData["Title"] = "Weekly Prices";
    ViewData["NotePurpose"] = "Review weekly price records and effective dates.";
    ViewData["NoteInstructions"] = "Use Copy Last Week or Set Price to add a new week.";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Weekly Price List</h1>
        <div>
            <a asp-action="CloneLastWeek" class="btn btn-outline-secondary me-2"><i class="bi bi-copy"></i> Copy Last Week</a>
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Set Price</a>
        </div>
    </div>

    <partial name="_PageNote" />

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th>Effective Date</th>
                            <th>Base Price (Walk-in)</th>
                            <th>Delivery Price</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var isActive = DateTime.Now >= item.EffectiveFrom && DateTime.Now <= item.EffectiveTo;
                            <tr class="@(isActive ? "table-success" : "")">
                                <td class="fw-bold">@item.Product?.Name</td>
                                <td>
                                    @item.EffectiveFrom.ToString("MMM dd") - @item.EffectiveTo.ToString("MMM dd, yyyy")
                                </td>
                                <td>@item.BasePrice.ToString("C")</td>
                                <td>@item.DeliveryPrice.ToString("C")</td>
                                <td>
                                    @if(isActive) { <span class="badge bg-success">Active</span> }
                                    else if(DateTime.Now > item.EffectiveTo) { <span class="badge bg-secondary">Expired</span> }
                                    else { <span class="badge bg-info">Upcoming</span> }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary"><i class="bi bi-pencil"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
